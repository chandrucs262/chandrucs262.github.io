                        <li class="nav-item mx-0 mx-lg-1 menufont">
                            @Html.ActionLink("Travel", "Contact", "Home", null, new { @class = "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" })
                        </li>
                        <li class="nav-item mx-0 mx-lg-1 myclass menufont" style="color:white;cursor:pointer;margin-left:4px;padding-left:7px;">
                            @Html.ActionLink("Festivals", "Festives", "Home", null, new { @class = "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" })
                        </li>
                        <li class="nav-item mx-0 mx-lg-1 myclass menufont" style="color:white;cursor:pointer;margin-left:4px;padding-left:7px;">
                            @Html.ActionLink("Dharshan Timings", "Timings", "Home", null, new { @class = "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" })
