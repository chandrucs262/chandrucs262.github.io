    <div class="container body-content" style="max-width: 1685px !important;margin-left: -17px !important;margin-right: -15px !important;">
        @RenderBody()
        <hr />
        <footer class="copyright py-4 text-center text-white" style="margin-right:-33px !important;margin-top:-18px !important; background-color:#2c3e50 !important;font-size:18px;">
